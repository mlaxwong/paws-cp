{% macro textField(model, attribute, config = []) %}
    {% import '@app/src/views/_includes/forms.twig' as forms %}
    {{
        forms.textField({
            id: 'input-' ~ attribute,
            label: model.getAttributeLabel(attribute),
            placeholder: model.getAttributeLabel(attribute),
            name: html.getInputName(model, attribute),
            value: attribute(model, attribute),
            errors: model.getErrors(attribute)
        }|merge(config))
    }}
{% endmacro %}

